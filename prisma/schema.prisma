generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String?    @default("")
  price       Float
  image       String?
  categories  Category[]
  cartItems   CartItem[]
  createdAt   DateTime?  @default(now())
  updatedAt   DateTime?  @updatedAt
}

model Category {
  id          Int          @id @default(autoincrement())
  name        CategoryName @default(SHOES)
  description String?      @default("")
  product     Product      @relation(fields: [productId], references: [id])
  productId   Int
}

model Order {
  id                  Int         @id @default(autoincrement())
  intent              INTENT      @default(CAPTURE)
  paypalOrderId       String?     @unique
  capturedAt          DateTime?
  purchase_units      Json[]
  application_context Json
  statusOrder         StatusOrder @default(CREATED)
  cart                Cart[]
}

model Transaction {
  id                 String      @id @default(uuid())
  statusTransactions StatusOrder @default(CREATED)
  purchase_units     Json[]
  payer              Json
}

model Cart {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  orderId        Int
  orders         Order    @relation(fields: [orderId], references: [id])
  cartItemId     Int
  cartItems      CartItem @relation(fields: [cartItemId], references: [id])
  currency       String
  discountAmount Int
  taxAmount      Int
  shippingAmount Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
}

model CartItem {
  id        Int      @id @default(autoincrement())
  carts     Cart[]
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  name      String
  quantity  Int
  price     Float
  addedAt   DateTime @default(now())
}

model User {
  id               Int       @id @default(autoincrement())
  name             String    @default("user name")
  lastname         String    @default("user lastname")
  email            String    @unique
  phone            String    @unique
  address          String
  password         String
  avatar           String?
  status           Status    @default(INACTIVE)
  lastLogin        DateTime  @default(now())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @default(now())
  role             Role[]    @default([USER])
  resetToken       String?
  resetTokenExpiry DateTime? @default(now())
  cart             Cart[]
}

enum Role {
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
}

enum StatusOrder {
  CREATED
  SAVED
  APPROVED
  VOIDED
  COMPLETED
  PAYER_ACTION_REQUIRED
}

enum INTENT {
  CAPTURE
  AUTHORIZE
}

enum CategoryName {
  SHOES
  FASHIONS
  ELECTRONICS
}